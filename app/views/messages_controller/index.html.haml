      %p
      = current_user.name
      %ul.user-
        %li.user-menu__edit-user 
          = link_to 'https://google.co.jp' do
            %i.fa.fa-edit
        %li.user-menu__new-group
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'

